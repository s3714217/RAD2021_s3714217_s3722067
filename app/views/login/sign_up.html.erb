<html>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    </head>
    <body>
        <div style="text-align:center ;color: red" ><%=@notification%></div>
        <h2 style="text-align:center; line-height:300%"> Account Details</h2>
        <div class="container" >
                  <%= form_tag action: 'sign_up' do %> 
                  <div style="text-align:center" class="form-group">Username: <input  style="text-align:center" class="form-control" type="text" name="username" placeholder="Enter at least 3 characters" pattern="[A-Za-z0-9]{3,20}"required></div>
                  <div style="text-align:center" class="form-group">Password: <input  style="text-align:center" class="form-control" type="password" name="password" placeholder="Enter at least 8 characters" pattern="[A-Za-z0-9]{8,10}"required></div>
                  <div style="text-align:center" class="form-group">Confirm Password: <input  style="text-align:center" class="form-control" type="password"  name="repassword" placeholder="Enter at least 8 characters" pattern="[A-Za-z0-9]{8,10}"required>
                  <div style="text-align:center" class="form-group">Email:  <input  style="text-align:center" class="form-control" type="email" name="email" placeholder="example@gmail.com" pattern="{1,30}"required></div>
                  <div style="text-align:center"><input type="submit" value="Register" name="register"></div>
                  <% end %>
                  <div style="text-align:center"><a class="form-group" href='/login/login' >Already a user</a></div>
    </div>
    
    </body>
</html>